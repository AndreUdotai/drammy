extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Album Name:
      input#name.form-control(type='text' placeholder='Album name (Made in Lagos)' name='name' required='true' value=(undefined===album ? '' : album.name) )
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Album description' name='description' required='true' value=(undefined===album ? '' : album.description))
    div.form-group
      label(for='released_date') Year of Release:
      input#released_date.form-control(type='date' name='released_date' value=(undefined===album ? '' : album.released_date) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
